<Page
    x:Class="BiliBili_UWP.Pages.Main.LivePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BiliBili_UWP.Pages.Main"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <controls:ImageEx Source="http://s1.hdslb.com/bfs/static/jinkela/video/asserts/no_video.png" HorizontalAlignment="Center"
                              IsCacheEnabled="True" Stretch="Uniform" Width="150" Margin="10,0,0,0"/>
            <TextBlock Text="做直播模块好累，我自己又不咋看，所以现在没有" Style="{StaticResource SmallTipTextStyle}" HorizontalAlignment="Center"
                       TextAlignment="Center" Margin="0,10"/>
            <Button Style="{StaticResource PrimaryButtonStyle}" x:Name="ToWebButton" HorizontalAlignment="Center"
                    Content="去网页" Click="ToWebButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
